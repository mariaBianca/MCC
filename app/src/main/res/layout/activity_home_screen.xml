<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

    </LinearLayout>



    <Button
        android:background="@drawable/bluetooth"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/btnBluetooth"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text=" Play an episode"
        android:id="@+id/btnEpisode"
        android:layout_gravity="center_horizontal"
        android:backgroundTintMode="src_in"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:background="@android:color/holo_orange_dark"
        android:textStyle="bold|italic"
        android:singleLine="false"
        android:focusable="@bool/abc_action_bar_embed_tabs"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:text="Joystick Control"
        android:id="@+id/btnJoystick"
        android:layout_gravity="center_horizontal"
        android:backgroundTintMode="src_in"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:singleLine="false"
        android:textStyle="bold|italic"
        android:focusable="@bool/abc_action_bar_embed_tabs"
        android:gravity="top|left"
        android:layout_alignBaseline="@+id/bluetoothLabel"
        android:layout_alignBottom="@+id/bluetoothLabel"
        android:layout_alignEnd="@+id/btnEpisode" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="145dp"
        android:layout_height="33dp"
        android:text="Button Control"
        android:id="@+id/btnButton"
        android:layout_gravity="center_horizontal"
        android:backgroundTintMode="src_in"
        android:textColor="@color/primary_dark_material_dark"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:singleLine="false"
        android:textStyle="bold|italic"
        android:visibility="visible"
        android:focusable="@bool/abc_action_bar_embed_tabs"
        android:gravity="top|left"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/btnEpisode"
        android:layout_alignStart="@+id/btnEpisode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" "
        android:id="@+id/bluetoothLabel"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/btnButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/selectionicon"
        android:layout_alignBottom="@+id/btnJoystick"
        android:layout_toStartOf="@+id/btnJoystick"
        android:layout_alignTop="@+id/btnJoystick" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/selectionicon"
        android:layout_alignTop="@+id/btnButton"
        android:layout_toStartOf="@+id/btnButton"
        android:layout_alignBottom="@+id/btnButton" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/selectionicon"
        android:layout_alignBottom="@+id/btnEpisode"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignTop="@+id/btnEpisode" />


</RelativeLayout>